###### Combined headers


####### Compile

main.o: main.cpp \
		title_language.h \
		title_language_base.h

title_language.o: title_language.cpp \
		title_language.h \
		title_language_base.h

title_language_base.h: title_language_base.ui
	$(UIC) title_language_base.ui -o $(INTERFACE_DECL_PATH)/title_language_base.h

title_language_base.cpp: title_language_base.ui
	$(UIC) title_language_base.ui -i title_language_base.h -o title_language_base.cpp

title_language_base.o: title_language_base.cpp \
		title_language_base.h \
		title_language_base.ui

moc_title_language.o: moc_title_language.cpp \
		title_language.h \
		title_language_base.h

moc_title_language_base.o: moc_title_language_base.cpp \
		title_language_base.h

moc_title_language.cpp: title_language.h
	$(MOC) title_language.h -o moc_title_language.cpp

moc_title_language_base.cpp: title_language_base.h
	$(MOC) title_language_base.h -o moc_title_language_base.cpp

